# ADCL Community Edition Configuration

# ============================================
# LLM API Keys (REQUIRED)
# ============================================
# Get Anthropic API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Get OpenAI API key from: https://platform.openai.com/api-keys (optional)
OPENAI_API_KEY=

# ============================================
# Service Ports
# ============================================
ORCHESTRATOR_PORT=8000
FRONTEND_PORT=3000
REGISTRY_PORT=9000

# MCP Server Ports
AGENT_PORT=7000
FILE_TOOLS_PORT=7002
NMAP_PORT=7003
HISTORY_PORT=7004

# ============================================
# Service Host Configuration
# ============================================
SERVICE_HOST=0.0.0.0

# ============================================
# Network Scanning Configuration
# ============================================
# Comma-separated CIDR ranges for allowed networks (leave blank for no restrictions)
ALLOWED_SCAN_NETWORKS=

# Default network range for nmap scans
DEFAULT_SCAN_NETWORK=192.168.1.0/24
DEFAULT_SCAN_TARGET=192.168.1.1

# ============================================
# Build Configuration (for development)
# ============================================
BACKEND_BUILD_CONTEXT=./backend
BACKEND_DOCKERFILE=Dockerfile
FRONTEND_BUILD_CONTEXT=./frontend
FRONTEND_DOCKERFILE=Dockerfile
REGISTRY_BUILD_CONTEXT=./registry-server
REGISTRY_DOCKERFILE=Dockerfile

# ============================================
# Volume Paths (Host Side)
# ============================================
WORKFLOWS_PATH=./workflows
AGENT_TEAMS_PATH=./agent-teams
AGENT_DEFINITIONS_PATH=./agent-definitions
REGISTRIES_CONF_PATH=./registries.conf
LOGS_PATH=./logs
MCP_SERVERS_PATH=./mcp_servers
WORKSPACE_PATH=./workspace
REGISTRY_REGISTRIES_PATH=./registry-server/registries
CONFIGS_PATH=./configs
TRIGGERS_PATH=./triggers

# ============================================
# Container Configuration
# ============================================
ORCHESTRATOR_USER=root
PYTHONUNBUFFERED=1
ADCL_EDITION=community

# ============================================
# API Configuration
# ============================================
API_HOST=localhost
API_PROTOCOL=http

# ============================================
# Auto-install MCP Servers
# ============================================
# Comma-separated list of MCPs to install on first startup
AUTO_INSTALL_MCPS=agent,file_tools,nmap_recon

# ============================================
# Container Paths (should match volume mounts)
# ============================================
CONTAINER_AGENT_DEFINITIONS_PATH=/app/agent-definitions
CONTAINER_AGENT_TEAMS_PATH=/app/agent-teams
CONTAINER_WORKFLOWS_PATH=/app/workflows
CONTAINER_REGISTRIES_CONF_PATH=/app/registries.conf
CONTAINER_LOGS_PATH=/app/logs
CONTAINER_LOGS_SHARED_PATH=/app/logs_shared
CONTAINER_MCP_SERVERS_PATH=/app/mcp_servers
CONTAINER_WORKSPACE_SHARED_PATH=/app/workspace_shared
CONTAINER_HISTORY_STORAGE_PATH=/app/volumes/conversations
CONTAINER_FILE_WORKSPACE_PATH=/workspace
CONTAINER_REGISTRY_DATA_PATH=/app/registries
CONTAINER_REGISTRY_DATA_V2_PATH=/app/registry

# ============================================
# Docker Configuration
# ============================================
DOCKER_SOCKET_PATH=unix:///var/run/docker.sock
DOCKER_NETWORK_NAME=mcp-network
DOCKER_NETWORK_DRIVER=bridge
DOCKER_HOST_INTERNAL=host.docker.internal
DOCKER_STOP_TIMEOUT=10

# ============================================
# Timeouts (in seconds)
# ============================================
# HTTP Timeouts
HTTP_TIMEOUT_DEFAULT=10.0
HTTP_TIMEOUT_HEALTH_CHECK=5.0
HTTP_TIMEOUT_LONG_RUNNING=600.0

# Nmap Scan Timeouts
NMAP_TIMEOUT_QUICK_SCAN=300
NMAP_TIMEOUT_FULL_SCAN=600
NMAP_TIMEOUT_VULNERABILITY_SCAN=600

# ============================================
# LLM Configuration
# ============================================
LLM_MAX_TOKENS=4096

# ============================================
# Polling Configuration (in seconds)
# ============================================
POLLING_INTERVAL=2.0
POLLING_SHORT_INTERVAL=0.1
POLLING_SUPERVISOR_INTERVAL=10.0
